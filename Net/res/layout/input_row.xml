<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
		<EditText
				android:id="@+id/starting_ip_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:digits="0123456789."
				android:hint="@string/start_address_label"
				android:background="@drawable/rounded_rectangle"
				android:padding="5dp"
				android:layout_margin="10dp"
				android:imeOptions="actionNext"
				android:nextFocusDown="@+id/ending_ip_address"
				android:singleLine="true"	/>
		<EditText
				android:id="@+id/ending_ip_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:digits="0123456789."
				android:gravity="top"
				android:hint="@string/end_address_label"
				android:layout_margin="10dp"
				android:padding="5dp"
				android:background="@drawable/rounded_rectangle" />
		
		<Button 
				android:text="Ping" 
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:textAlignment="center"
				android:background="@drawable/ping_button_selector"
				style="@style/ButtonText" />
		 
</LinearLayout>  
